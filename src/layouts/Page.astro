---
import Centered from '@/layouts/Centered.astro';
import { getDefaultOpenGraphImagePath } from '@/utils/paths';

import type { Metadata } from '@/types/common';

export interface Props extends Metadata {}

const props = Astro.props;
const { pathname } = Astro.url;

const ogImage = getDefaultOpenGraphImagePath('pages', pathname);

console.log('Page Layout pathname', pathname);

const metadata = { ...props, image: ogImage };
---

<Centered {metadata}>
  <article class="my-prose">
    <slot />
  </article>
</Centered>
