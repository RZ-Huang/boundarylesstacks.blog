---
import Centered from '@/layouts/Centered.astro';
import { getDefaultOpenGraphImagePath } from '@/utils/paths';

import type { Metadata } from '@/types/common';

export interface Props extends Metadata {}

const props = Astro.props;
// available in Layouts
const { pathname } = Astro.url;

// only call in layouts
const path = `/pages${pathname}`;
const image = getDefaultOpenGraphImagePath(path);

const metadata = { ...props, image };
---

<Centered {metadata}>
  <article class="my-prose">
    <slot />
  </article>
</Centered>
