---
import FullWidth from '@/layouts/FullWidth.astro';

import type { BaseProps } from '@/layouts/Base.astro';

export interface Props extends BaseProps {}

const props = Astro.props;
---

<FullWidth {...props}>
  <article class="pb-4 lg:pb-8">
    <figure class="centered max-w-4xl">
      <slot name="hero-image" />
    </figure>
    {/* hero custom without prose */}
    <section class="my-prose centered-px max-w-3xl pt-12 lg:pt-16">
      <slot name="hero-text" />
    </section>
    <section class="my-prose centered-px max-w-3xl pb-12 lg:pb-16">
      <slot name="content" />
    </section>
    <section class="centered-px max-w-5xl">
      <slot name="more-posts" />
    </section>
  </article>
</FullWidth>
