---
import { getAllProjects } from '@/modules/project';
import Centered from '@/layouts/Centered.astro';

import type { Metadata } from '@/types/common';

export async function getStaticPaths() {
  const pages = await getAllProjects();

  const paths = pages.map((page) => ({
    params: { slug: page.slug },
    props: { page },
  }));

  return paths;
}

const { data, render } = Astro.props.page;
const { title, description, heroImage } = data;
const metadata: Metadata = { title, description, image: heroImage.src };

const { Content } = await render();
---

<Centered {metadata}>
  <Content />
</Centered>
