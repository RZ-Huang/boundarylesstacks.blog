---
import Alert from '@/components/Alert.astro';
import Link from '@/components/Link.astro';
import { ROUTES } from '@/constants/routes';
import { CONFIG } from '@/config';

const { AUTHOR_LINKEDIN } = CONFIG;

export interface Props {
  title: string;
  slug: string;
}

const { title, slug } = Astro.props;
// generate Twitter intent link
---

<Alert title="Share your thoughts">
  <div class="flex flex-col items-start gap-x-4 gap-y-0 sm:flex-row">
    <div class="flex shrink flex-wrap gap-x-1">
      <span>Since youâ€™ve made it this far, hopefully you enjoyed reading! Please </span>
      <Link href={`${ROUTES.BLOG}${slug}`}>share</Link>
      <span>the post or</span>
      <Link href={AUTHOR_LINKEDIN} target="_blank" rel="noopener noreferrer">
        ping me on LinkedIn
      </Link>
    </div>

    <Link href={`${ROUTES.BLOG}${slug}`} variant="button">Twitter</Link>
  </div>
</Alert>
