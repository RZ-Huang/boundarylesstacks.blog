---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';

import Config from '../config';
import Avatar from '../images/avatar.jpg';
import Content from './Content.astro';
import HeaderLink from './HeaderLink.astro';
import { ThemeSwitcher } from './ThemeSwitcher';

const menuItems: Array<{ title: string; path: string }> = [
  {
    title: 'Blog',
    path: '/blog/',
  },
  {
    title: 'About',
    path: '/about/',
  },
  {
    title: 'Resume',
    path: '/resume/',
  },
  {
    title: 'Projects',
    path: '/projects/',
  },
];
---

<Content>
  <header id="main-header" class="group">
    <div class="grid grid-cols-1 items-center justify-between gap-2 py-4 md:grid-cols-2">
      <h1 class="shrink-0">
        <a
          class="group flex flex-row items-center gap-2 whitespace-nowrap text-2xl font-bold text-blue-700 underline-offset-2 outline-none duration-100 hover:text-blue-900 focus:underline focus:decoration-4 focus:underline-offset-4 motion-safe:transition-all dark:text-blue-100 dark:hover:text-blue-300"
          href="/"
        >
          <Image
            loading="eager"
            class="h-12 w-12 shrink-0 select-none overflow-hidden rounded-full group-focus-visible:ring-4 group-focus-visible:ring-blue-200 dark:group-focus-visible:ring-blue-500/40"
            src={Avatar}
            width={96}
            height={96}
            alt="Profile picture"
          />
          {Config.SITE_TITLE}
        </a>
      </h1>
      <nav class="select-none items-end" aria-label="Site navigation">
        <ul class="flex flex-row flex-wrap justify-end gap-1 group-[.menu-open]:flex-col">
          {
            menuItems.map(({ title, path }) => (
              <li>
                <HeaderLink href={path}>{title}</HeaderLink>
              </li>
            ))
          }
          <li class="shrink-0"><ThemeSwitcher client:load /></li>
        </ul>
      </nav>
      <mobile-button>
        <button
          aria-expanded="false"
          aria-haspopup="menu"
          aria-label="Open main menu"
          type="button"
        >
          <Icon name="mdi:hamburger-menu" class="h-6 w-6" />
        </button>
      </mobile-button>
    </div>
  </header>
</Content>

<script>
  class MobileNavBtn extends HTMLElement {
    private headerEl: HTMLElement;
    private menuOpen: boolean;
    private mobileButtonEl: HTMLButtonElement;

    toggleMobileMenu = () => {
      this.headerEl.classList.toggle('menu-open');
      this.menuOpen = !this.menuOpen;
      this.mobileButtonEl.setAttribute('aria-expanded', this.menuOpen.toString());
    };

    constructor() {
      super();
      this.headerEl = document.getElementById('main-header')!;
      this.mobileButtonEl = this.querySelector('button') as HTMLButtonElement;
      this.menuOpen = false;

      this.mobileButtonEl.addEventListener('click', this.toggleMobileMenu);
    }
  }

  customElements.define('mobile-button', MobileNavBtn);
</script>
