---
import Projects from '../../layouts/Projects.astro';
import { getAllEntries } from '../../modules/common';

export async function getStaticPaths() {
  const pages = await getAllEntries('project');

  return pages.map((page) => ({
    params: { slug: page.slug },
    props: { page },
  }));
}

const {
  data: { title, description, heroImage },
  render,
} = Astro.props.page;

const { Content } = await render();
---

{/* project page */}

<Projects title={title} description={description} image={heroImage?.src}>
  <Content />
</Projects>
