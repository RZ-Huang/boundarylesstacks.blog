{
  "extends": "@repo/typescript-config/base.json",
  // redefine entire compilerOptions
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/content/*": ["content/*"],
      "@/icons/*": ["icons/*"],
      "@/images/*": ["images/*"],
      "@/labs/*": ["labs/*"],
      "@/layouts/*": ["layouts/*"],
      "@/modules/*": ["modules/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"],
      "@/config": ["config.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": ["dist", ",astro", "node_modules"]
}
