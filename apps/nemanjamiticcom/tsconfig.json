{
  "extends": "@repo/typescript-config/base.json",
  // redefine entire compilerOptions
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": ["dist", ",astro", "node_modules"]
}
